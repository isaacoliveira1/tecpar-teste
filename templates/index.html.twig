{% extends 'base.html.twig' %}
{% block content %}
<div class="row justify-content-center vertical-align-items-center align-self-center">

    <div class="col-md-12" v-show="loading == false">
        <div class="card o-hidden border-0 shadow-lg my-3">
            <div class="card-body p-3" style="min-height: 80vh">
                <!-- Nested Row within Card Body -->
                <form method="post" action="{{ path('gerarHash') }}" >

                <div class="row" align="center">
                    <div class="col-lg-12 text-center">
                        <div class="d-flex justify-content-between align-items-center m-4">

                            <h3 class="text-dark text-center">

                            Informe a String
                            </h3><input type="text" class="form-control" required name="gerarKey">
                            <h3 class="text-dark text-center">
                            Informe a quantidade de requisições
                            </h3><input type="text" class="form-control" required name="requisicoes">

                        </div>
                        <hr>
                        <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-ok"></i> Enviar</button>
                        <a href="{{ absolute_url(path("visualizarResultado")) }}" class="btn btn-info" type="submit"><i class="glyphicon glyphicon-eye-open"></i> Visualizar</a>
                        <br>
                        <div id="resultado"></div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

</div>
{% endblock %}
{% block page_js %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

{% endblock %}